# aliases

## workspace
alias work="cd ~/Workspace"

## sudo
alias sudo='sudo '

## edit profile
alias edit_profile='vi ~/.profile'

## edit_bash_profile
alias edit_bash_profile='vi ~/.bash_profile'

## reload bash_profile
alias load_bash_profile='source ~/.bash_profile'

## reload profile
alias load_profile='soruce ~/.profile'

## show port stats
alias port_stat='netstat -vanp tcp'

# This alias recursively destroys all .DS_Store files in the folder I am currently in
alias killDS='find . -name *.DS_Store -type f -delete'

